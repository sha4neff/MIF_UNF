	ДополнительныеПараметры.Вставить("Спецоператор", 	Спецоператор);
	
	ОписаниеОповещения = Новый ОписаниеОповещения(
		"ОткрытьФормуРедактированияНаправленийСдачиОтчетностиЗавершение", 
