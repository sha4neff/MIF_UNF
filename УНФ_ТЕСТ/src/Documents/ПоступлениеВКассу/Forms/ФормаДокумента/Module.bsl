			);
		КонецЕсли;
		
	Иначе
		
		Если Объект.РасшифровкаПлатежа.Количество() > 0 Тогда
			ПересчитатьСуммыДокумента(Курс, Кратность, Ложь, ДополнительныеПараметры);
		КонецЕсли;
		
	КонецЕсли;
	
	Если Объект.ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийПоступлениеВКассу.ПокупкаВалюты") Тогда
		РассчитатьСуммуУчета();
		ОбновитьОтображениеЭлементовПокупкаВалюты(); 
	КонецЕсли;
	
КонецПроцедуры

