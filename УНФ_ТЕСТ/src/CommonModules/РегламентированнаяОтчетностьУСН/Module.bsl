		ТипЗадачи = "РасчетПоСтраховымВзносам";
	Иначе
		ТипЗадачи = "";
	КонецЕсли;
	
	Результат.Вставить("ТипЗадачи", ТипЗадачи);
	
	Возврат Результат;
	
