					Представление = Представление + " (" + СокрЛП(Выборка.Код) + ")";
				КонецЕсли;
				
			КонецЕсли;
			
			ДанныеВыбора.Добавить(Выборка.Ссылка, Представление);
			
		КонецЕсли;
		
	КонецЦикла;
		
	СтандартнаяОбработка = Ложь;
	
