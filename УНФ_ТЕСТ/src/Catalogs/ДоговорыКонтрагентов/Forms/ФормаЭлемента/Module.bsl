// Процедура составляет наименование договора из номера и даты договора.
//
&НаКлиентеНаСервереБезКонтекста
Функция СформироватьНаименование(НомерДоговора, ДатаДоговора, ВалютаРасчетов, УчетВалюты)
	
	ТекстНаименования = НСтр("ru = '%НомерДоговора%%ДатаДоговора%%ВалютаРасчетов%'");
	ТекстНаименования = СтрЗаменить(ТекстНаименования, "%НомерДоговора%",  ?(ЗначениеЗаполнено(НомерДоговора), НСтр("ru = '№ '") + СокрЛП(НомерДоговора), ""));
	ТекстНаименования = СтрЗаменить(ТекстНаименования, "%ДатаДоговора%",   ?(ЗначениеЗаполнено(ДатаДоговора), НСтр("ru = ' от '") + СокрЛП(Строка(Формат(ДатаДоговора, "ДФ=dd.MM.yyyy"))), ""));
	ТекстНаименования = СтрЗаменить(ТекстНаименования, "%ВалютаРасчетов%", ?(ЗначениеЗаполнено(ВалютаРасчетов) И УчетВалюты, " ("+СокрЛП(Строка(ВалютаРасчетов))+")", ""));
	
	Возврат ТекстНаименования;
	
КонецФункции // СформироватьНаименование()

// Процедура устанавливает доступность элементов формы.
//
