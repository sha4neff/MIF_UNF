		Если Строка.Количество() > 0 Тогда 
			ИндексСтроки = РедактируемыеПараметры.Индекс(Строка[0]);
			Сдвиг = Итератор - ИндексСтроки;
			Если Сдвиг <> 0 Тогда 
				РедактируемыеПараметры.Сдвинуть(ИндексСтроки, Сдвиг);
			КонецЕсли;
		КонецЕсли;
		Итератор = Итератор + 1;
	КонецЦикла;
	
	ЭтаФорма.ДокументСформирован = Истина;
	
